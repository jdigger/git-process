#!/usr/bin/env ruby

require 'git-process/options/git_new_fb_options'
require 'git-process/new_fb'

options = GitProc::NewFeatureBranchOptions.new(File.basename(__FILE__), ARGV)

gp = GitProc::NewFeatureBranch.new('.', options.log_level)

begin
  gp.new_feature_branch(options.branch_name)
rescue GitProc::GitProcessError => exp
  puts exp.message
  exit(-1)
end
