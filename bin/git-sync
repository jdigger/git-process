#!/usr/bin/env ruby

require "rubygems"
require "bundler/setup"

require 'logger'
require 'backports'
require_relative '../lib/git-process/git-sync-options'
require_relative '../lib/git-process/git-process'

options = Git::Process::SyncOptions.new(File.basename(__FILE__), ARGV)

gp = Git::Process.new('.', :log_level => options.log_level)

begin
  gp.sync_with_server
rescue Git::Process::GitProcessError => exp
  puts exp.message
  exit -1
end
