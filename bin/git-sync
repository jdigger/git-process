#!/usr/bin/env ruby

require 'git-process/options/git_sync_options'
require 'git-process/sync'

options = GitProc::SyncOptions.new(File.basename(__FILE__), ARGV)

gp = GitProc::Sync.new('.', options.log_level)

begin
  gp.sync_with_server(options.rebase, options.force)
rescue GitProc::GitProcessError => exp
  puts exp.message
  exit(-1)
end
