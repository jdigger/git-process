#!/usr/bin/env ruby

require 'git-process/options/git_to_master_options'
require 'git-process/rebase_to_master'

options = GitProc::ToMasterOptions.new(File.basename(__FILE__), ARGV)

gp = GitProc::RebaseToMaster.new('.', options.log_level)

begin
  gp.rebase_to_master
rescue GitProc::GitProcessError => exp
  puts exp.message
  exit(-1)
end
